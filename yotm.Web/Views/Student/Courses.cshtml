@model List<CourseViewModel>

@{
    ViewData["Title"] = "Ders Listesi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-book"></i> Yaz Okulu Dersleri</h2>
        <div class="d-flex gap-2">
            <a asp-action="Profile" asp-controller="Student" class="btn btn-outline-secondary">
                <i class="bi bi-person-circle"></i> Profil
            </a>
            <a asp-action="MyApplications" class="btn btn-outline-primary">
                <i class="bi bi-list-check"></i> Başvurularım
            </a>
            <a asp-action="Logout" asp-controller="Auth" class="btn btn-outline-danger">
                <i class="bi bi-box-arrow-right"></i> Çıkış
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Henüz açılmış ders bulunmamaktadır.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var course in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm @(course.IsQuotaFull ? "border-danger" : "")">
                        <div class="card-header @(course.IsQuotaFull ? "bg-danger text-white" : "bg-primary text-white")">
                            <h5 class="mb-0">@course.Code</h5>
                        </div>
                        <div class="card-body">
                            <h6 class="card-title">@course.Name</h6>

                            <hr />

                            <p class="mb-2">
                                <strong><i class="bi bi-building"></i> Fakülte:</strong><br />
                                <small class="text-muted">@course.Faculty</small>
                            </p>

                            <p class="mb-2">
                                <strong><i class="bi bi-diagram-3"></i> Bölüm:</strong><br />
                                <small class="text-muted">@course.Department</small>
                            </p>

                            <p class="mb-2">
                                <strong><i class="bi bi-person-badge"></i> Öğretim Görevlisi:</strong><br />
                                <small class="text-muted">@course.Instructor</small>
                            </p>

                            <hr />

                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>Kontenjan:</strong><br />
                                    <span class="badge @(course.AvailableQuota > 0 ? "bg-success" : "bg-danger")">
                                        @course.AvailableQuota / @course.Quota
                                    </span>
                                </div>

                                @if (course.HasApplied)
                                {
                                    <span class="badge bg-info text-dark">
                                        <i class="bi bi-check-circle"></i> Başvuruldu
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="card-footer">
                            @if (course.HasApplied)
                            {
                                <button class="btn btn-secondary w-100" disabled>
                                    <i class="bi bi-check-circle"></i> Zaten Başvurdunuz
                                </button>
                            }
                            else if (course.IsQuotaFull)
                            {
                                <button class="btn btn-danger w-100" disabled>
                                    <i class="bi bi-x-circle"></i> Kontenjan Dolu
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-success w-100 apply-btn" data-course-id="@course.Id" data-course-name="@course.Name">
                                    <i class="bi bi-plus-circle"></i> Başvur
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Başvuru Onay Modal -->
<div class="modal fade" id="applyModal" tabindex="-1" aria-labelledby="applyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="applyModalLabel">Başvuru Onayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>
                    <strong id="courseNameModal"></strong> dersine başvuru yapmak istediğinizden emin misiniz?
                </p>
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Başvurunuz admin onayına gönderilecektir.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-success" id="confirmApplyBtn">
                    <i class="bi bi-check-circle"></i> Evet, Başvur
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let selectedCourseId = 0;

        // Başvur butonuna tıklandığında
        document.querySelectorAll('.apply-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                selectedCourseId = this.getAttribute('data-course-id');
                const courseName = this.getAttribute('data-course-name');

                console.log('Selected Course ID:', selectedCourseId);  // ← DEBUG
                console.log('Course Name:', courseName);

                document.getElementById('courseNameModal').textContent = courseName;

                const modal = new bootstrap.Modal(document.getElementById('applyModal'));
                modal.show();
            });
        });

        // Onay butonuna tıklandığında
        document.getElementById('confirmApplyBtn').addEventListener('click', async function() {
            if (selectedCourseId === 0) return;

            try {
                const response = await fetch('@Url.Action("ApplyToCourse", "Student")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ courseId: selectedCourseId })
                });

                const result = await response.json();

                if (result.success) {
                    // Modal'ı kapat
                    const modal = bootstrap.Modal.getInstance(document.getElementById('applyModal'));
                    modal.hide();

                    // Sayfayı yenile
                    location.reload();
                } else {
                    alert('Hata: ' + result.message);
                }
            } catch (error) {
                alert('Bir hata oluştu: ' + error.message);
            }
        });
    </script>
}