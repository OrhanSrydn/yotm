@model AdminLoginViewModel

@{
    ViewData["Title"] = "Admin Girişi";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h3 class="text-center mb-0">Admin Girişi</h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="AdminLogin" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control form-control-lg"
                               placeholder="admin" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control form-control-lg"
                               placeholder="••••••••" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="bi bi-shield-lock"></i> Giriş Yap
                        </button>
                    </div>
                </form>

                <div class="mt-3 p-3 bg-light rounded">
                    <small class="text-muted">
                        <strong>Test Kullanıcısı:</strong><br />
                        Kullanıcı Adı: <code>admin</code><br />
                        Şifre: <code>admin123</code>
                    </small>
                </div>
            </div>
            <div class="card-footer text-center">
                <small class="text-muted">Öğrenci misiniz? <a asp-action="StudentLogin">Öğrenci Girişi</a></small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}