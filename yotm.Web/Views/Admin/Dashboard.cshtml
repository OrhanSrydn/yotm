@model List<CourseViewModel>

@{
    ViewData["Title"] = "Admin Dashboard";
    var username = Context.Session.GetString("Username") ?? "Admin";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-speedometer2"></i> Admin Panel</h2>
        <div>
            <span class="text-muted">Hoş geldiniz, <strong>@username</strong></span>
            <a asp-controller="Auth" asp-action="Logout" class="btn btn-outline-danger ms-3">
                <i class="bi bi-box-arrow-right"></i> Çıkış
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-book"></i> Ders Listesi ve Başvuru Yönetimi</h5>
        </div>
        <div class="card-body">
            <p class="text-muted">
                Aşağıdan bir ders seçerek o derse yapılan başvuruları görüntüleyebilir ve yönetebilirsiniz.
            </p>

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Henüz ders bulunmamaktadır.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Ders Kodu</th>
                                <th>Ders Adı</th>
                                <th>Bölüm</th>
                                <th>Fakülte</th>
                                <th>Öğretim Görevlisi</th>
                                <th>Kontenjan</th>
                                <th>Onaylı</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model.OrderBy(c => c.Code))
                            {
                                <tr>
                                    <td><strong>@course.Code</strong></td>
                                    <td>@course.Name</td>
                                    <td><small class="text-muted">@course.Department</small></td>
                                    <td><small class="text-muted">@course.Faculty</small></td>
                                    <td><small class="text-muted">@course.Instructor</small></td>
                                    <td>
                                        <span class="badge bg-secondary">@course.Quota</span>
                                    </td>
                                    <td>
                                        <span class="badge @(course.ApprovedCount > 0 ? "bg-success" : "bg-secondary")">
                                            @course.ApprovedCount
                                        </span>
                                    </td>
                                    <td>
                                        @if (course.IsQuotaFull)
                                        {
                                            <span class="badge bg-danger">Dolu</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Müsait</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="CourseApplications" asp-route-courseId="@course.Id"
                                           class="btn btn-sm btn-primary">
                                            <i class="bi bi-eye"></i> Başvuruları Görüntüle
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- Genel İstatistikler -->
    @if (Model != null && Model.Any())
    {
        <div class="row">
            <div class="col-md-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-primary">
                            <i class="bi bi-book"></i> Toplam Ders
                        </h5>
                        <h2>@Model.Count()</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-success">
                            <i class="bi bi-person-check"></i> Toplam Onaylı
                        </h5>
                        <h2>@Model.Sum(c => c.ApprovedCount)</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-info">
                            <i class="bi bi-diagram-3"></i> Toplam Kontenjan
                        </h5>
                        <h2>@Model.Sum(c => c.Quota)</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-warning">
                            <i class="bi bi-percent"></i> Doluluk Oranı
                        </h5>
                        <h2>@(Model.Sum(c => c.Quota) > 0 ? Math.Round((double)Model.Sum(c => c.ApprovedCount) / Model.Sum(c => c.Quota) * 100, 1) : 0)%</h2>
                    </div>
                </div>
            </div>
        </div>
    }
</div>